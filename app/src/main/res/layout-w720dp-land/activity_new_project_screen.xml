<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_project"
    tools:context=".NewProjectScreen"
    tools:ignore="MissingDefaultResource">


    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Project"
        android:gravity="center"
        android:textSize="38sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edittext"
            android:hint="Project Title"
            android:layout_marginTop="20dp"
            android:padding="10sp">

        </EditText>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edittext"
            android:hint="Venue Title"
            android:layout_marginTop="20dp"
            android:padding="10sp">
        </EditText>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edittext"
            android:hint="Survey Conducted By"
            android:layout_marginTop="20dp"
            android:padding="10sp">

        </EditText>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/newProject_bt"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:text="BACK"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/whiteround_bt"
                >

            </Button>

            <Button
                android:id="@+id/openProject_bt"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:background="@drawable/pinkround_bt"
                >

            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>