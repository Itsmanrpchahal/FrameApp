<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/new_project"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/leftImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:src="@drawable/rectangle_1">
        </ImageView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/page1text"

                android:textColor="@color/white">

            </TextView>

            <TextView
                android:id="@+id/text2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/page1text1"
                android:layout_marginTop="16sp"
                android:layout_below="@id/text1">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/newProject_bt"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:text="New Project"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/whiteround_bt"
                    >

                </Button>

                <Button
                    android:id="@+id/openProject_bt"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:text="Open Project"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="12dp"
                    android:textStyle="bold"
                    android:background="@drawable/pinkround_bt"
                    >

                </Button>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/group_1">

    </ImageView>


</RelativeLayout>